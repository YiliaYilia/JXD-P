		<class>cn.com.sinosoft.wechat.task.UploadMediaTask</class>
		<url><![CDATA[https://api.weixin.qq.com/cgi-bin/media/upload?access_token=ACCESS_TOKEN&type=TYPE]]></url>
		<work>cn.com.sinosoft.wechat.work.UploadMediaWork</work>
	</task>
	<!-- 模版消息-->
	<task>
