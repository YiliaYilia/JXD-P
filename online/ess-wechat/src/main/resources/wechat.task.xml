<tasks>
	<task>
		<name>token</name>
		<url><![CDATA[https://api.weixin.qq.com/cgi-bin/token?grant_type=client_credential&appid=APP_ID&secret=APP_SECRET]]></url>
		<work>cn.com.sinosoft.wechat.work.TokenWork</work>
		<instance>single</instance>
	</task>
	<task>
		<name>jsApiTicket</name>
		<url><![CDATA[https://api.weixin.qq.com/cgi-bin/ticket/getticket?access_token=ACCESS_TOKEN&type=jsapi]]></url>
		<work>cn.com.sinosoft.wechat.work.JsApiTicketWork</work>
		<instance>single</instance>
	</task>
	<task>
		<name>getOpenId</name>
		<class>cn.com.sinosoft.wechat.task.GetGrantedFansOpenIDTask</class>
		<url><![CDATA[https://api.weixin.qq.com/sns/oauth2/access_token?appid=APP_ID&secret=APP_SECRET&code=CODE&grant_type=authorization_code]]></url>
		<work>cn.com.sinosoft.wechat.work.FansOpenidWork</work>
		<instance>multi</instance>
	</task>
	<task>
		<name>fans</name>
		<url><![CDATA[https://api.weixin.qq.com/cgi-bin/user/get?access_token=ACCESS_TOKEN]]></url>
		<work>cn.com.sinosoft.wechat.work.FansWork</work>
		<instance>single</instance>
	</task>
	<task>
		<name>fansinfo</name>
		<url><![CDATA[https://api.weixin.qq.com/cgi-bin/user/info?access_token=ACCESS_TOKEN&openid=OPENID&lang=zh_CN]]></url>
		<class>cn.com.sinosoft.wechat.task.FansInfoTask</class>
		<work>cn.com.sinosoft.wechat.work.FansInfoWork</work>
		<instance>multi</instance>
	</task>
	<task>
		<name>newfansinfo</name>
		<url><![CDATA[https://api.weixin.qq.com/sns/userinfo?access_token=OAUTH2_TOKEN&openid=OPENID&lang=zh_CN]]></url>
		<class>cn.com.sinosoft.wechat.task.FansInfoTask</class>
		<work>cn.com.sinosoft.wechat.work.NewFansInfoWork</work>
		<instance>multi</instance>
	</task>
	<task>
		<name>message</name>
		<url><![CDATA[https://api.weixin.qq.com/cgi-bin/message/custom/send?access_token=ACCESS_TOKEN]]></url>
		<work>cn.com.sinosoft.wechat.work.CustomerMessageWork</work>
	</task>
